@model List<ClinicWeb.Models.AppointmentPatientViewModel>
@{
    ViewBag.Title = "Danh sách lịch khám";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách tất cả lịch khám</h2>

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Họ</th>
        <th>Tên bệnh nhân</th>
        <th>Ngày khám</th>
        <th>Triệu chứng</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.PatientFirstName</td>
            <td>@item.PatientLastName</td>
            <td>@item.Date</td>
            <td>@item.Reason</td>

            <td>
                <a class="btn btn-success" href="/Nurse/CreateInvoice/@item.Id">Xuất hóa đơn</a>
            </td>

        </tr>
    }
</table>