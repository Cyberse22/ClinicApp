@model ClinicWeb.App_Data.Appointment

@{
    ViewBag.Title = "Chi tiết lịch khám";
}

<h1 class="text-center m-3">CHI TIẾT LỊCH KHÁM</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <dl class="row">
                <dt class="col-sm-4">ID</dt>
                <dd class="col-sm-8">@Model.id</dd>

                <dt class="col-sm-4">Bệnh nhân</dt>
                <dd class="col-sm-8">@Model.Patient.UserInfo.last_name @Model.Patient.UserInfo.first_name</dd>

                <dt class="col-sm-4">Ngày sinh</dt>
                <dd class="col-sm-8">@Model.Patient.UserInfo.date_of_birth.Value.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Giới tính</dt>
                <dd class="col-sm-8">@Model.Patient.UserInfo.gender</dd>

                <dt class="col-sm-4">Ngày hẹn</dt>
                <dd class="col-sm-8">@Model.date.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Giờ hẹn</dt>
                <dd class="col-sm-8">@Model.time</dd>

                <dt class="col-sm-4">Lý do</dt>
                <dd class="col-sm-8">@Model.reason</dd>

                <dt class="col-sm-4">Trạng thái</dt>
                <dd class="col-sm-8">@Model.status</dd>
            </dl>

            <div class="text-center mb-3">
                <a class="btn btn-primary" href="@Url.Action("PrescribeMedication", "Doctor", new { id = Model.id })">Tạo toa thuốc</a>
                <a class="btn btn-danger" href="@Url.Action("FinishExamination", "Doctor", new { id = Model.id })">Kết thúc khám</a>
                <a class="btn btn-secondary" href="@Url.Action("Appointments", "Doctor")">Quay lại</a>
            </div>
        </div>
    </div>
</div>
