@model ClinicWeb.App_Data.Service

@{
    ViewBag.Title = "Xác nhận xóa dịch vụ";
}

<h2>Xác nhận xóa dịch vụ</h2>

<p>Bạn có chắc chắn muốn xóa dịch vụ <strong>@Model.name</strong> không?</p>

@using (Html.BeginForm("DeleteServiceConfirmed", "Admin", new { id = Model.id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-actions">
        <button type="submit" class="btn btn-danger mb-3">Xóa</button>
        @Html.ActionLink("Hủy", "Services", "Admin", null, new { @class = "btn btn-default mb-3" })
    </div>
}

