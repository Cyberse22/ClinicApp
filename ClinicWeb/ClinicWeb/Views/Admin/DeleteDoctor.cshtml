@model ClinicWeb.App_Data.Doctor

@{
    ViewBag.Title = "Xác nhận xóa bác sĩ";
}

<h2>Xác nhận xóa bác sĩ</h2>

<p>Bạn có chắc chắn muốn xóa bác sĩ <strong>@Model.UserInfo.last_name @Model.UserInfo.first_name</strong> không?</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions">
        <button type="submit" class="btn btn-danger mb-3">Xóa</button>
        @Html.ActionLink("Hủy", "Doctors", "Admin", null, new { @class = "btn btn-default mb-3" })
    </div>
}